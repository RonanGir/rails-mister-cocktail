<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Add a new cocktail</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <br>
        <%= link_to 'All cocktails', cocktails_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
