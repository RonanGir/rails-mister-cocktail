<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4">
      <h1><%= @cocktail.name %></h1>
      <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
      <h2>Doses</h2>
      <ul>
        <% @doses.each do |dose| %>
        <li>
          <%= dose.description %> of <%= dose.ingredient.name %>
          - <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure ?'} do %>
            <i class="fa fa-trash-o" aria-hidden="true"></i>
          <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <%= link_to 'Back to cocktails', cocktails_path, class: 'btn btn-primary' %>
  <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>
</div>


